<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherit_res_lang_form" model="ir.ui.view">
        <field name="name">website.lang.flag.form</field>
        <field name="inherit_id" ref="base.res_lang_form"/>
        <field name="model">res.lang</field>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/group/group[1]/field[@name='translatable']" position="after">
                <field name="flag" widget="image"/>
            </xpath>
        </field>
    </record>
</odoo>